<form class="delete_form" method="post" action="{{ path('app_thread_delete', {'id': thread.id}) }}" 
    onsubmit="return confirm('¿Estás seguro/a de que deseas eliminar este thread/hilo?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ thread.id) }}">
    <button class="btn bg-white p-0 m-0 btn_erase"><i class="fa fa-eraser"></i></button>
</form>
