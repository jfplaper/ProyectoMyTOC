{% extends 'base.html.twig' %}

{% block title %}MyTOC - Usuario{% endblock %}

{% block body %}
    <a href="{{ path('app_user_index') }}" class="mb-2">Volver</a>
    <h1>Datos del usuario</h1>
    <img src="/uploads/images/{{ user.image }}" alt="Imagen de perfil de {{ user.username }}" width="200" height="auto" style="border-radius: 5px;" />
    <br>
    <div class="container table-responsive">
        <table class="table mx-auto" style="width: auto;">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td data-testid="user-username">{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Imagen</th>
                    <td>{{ user.image }}</td>
                </tr>
                <tr>
                    <th>Baneado</th>
                    <td>{{ user.banned ? 'SÃ­' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
