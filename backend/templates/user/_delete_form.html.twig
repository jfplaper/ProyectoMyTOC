<form class="delete_form" method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" 
    onsubmit="return confirm('¿Estás seguro/a de que deseas eliminar este usuario?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn bg-white p-0 m-0 btn_erase"><i class="fa fa-eraser"></i></button>
</form>
