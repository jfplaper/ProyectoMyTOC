{% extends 'base.html.twig' %}

{% block title %}MyTOC - Comentario{% endblock %}

{% block body %}
    <a href="{{ path('app_comment_index') }}" class="mb-2">Volver</a>
    <h1>Datos del comentario</h1>
    <div class="container table-responsive">
        <table class="table mx-auto" style="width: auto;">
            <tbody>
                <tr>
                    <th>Texto</th>
                    <td data-testid="comment-text">{{ comment.text }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{{ comment.date ? comment.date|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Visible</th>
                    <td>{{ comment.visible ? 'SÃ­' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Autor</th>
                    <td>{{ comment.author ? comment.author.username : '' }}</td>
                </tr>
                <tr>
                    <th>Thread/hilo</th>
                    <td>{{ comment.thread ? comment.thread.title : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
