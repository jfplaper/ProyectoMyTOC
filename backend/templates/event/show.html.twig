{% extends 'base.html.twig' %}

{% block title %}MyTOC - Evento{% endblock %}

{% block body %}
    <a href="{{ path('app_event_index') }}" class="mb-2">Volver</a>
    <h1>Datos del evento</h1>
    <img src="/uploads/images/{{ event.image }}" alt="Imagen del evento de {{ event.title }}" width="200" height="auto" style="border-radius: 5px;" />
    <br>
    <table class="table w-50">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td data-testid="event-title">{{ event.title }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ event.text }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Localización</th>
                <td>{{ event.location ? event.location : 'Virtual / online' }}</td>
            </tr>
            <tr>
                <th>Precio(€)</th>
                <td>{{ event.price ? event.price : 'Gratuito' }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Creador</th>
                <td>{{ event.creator ? event.creator.username : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
