{% extends 'base.html.twig' %}

{% block title %}MyTOC - Evento{% endblock %}

{% block body %}
    <h1>Eventos</h1>
    <a href="{{ path('app_event_new') }}">Crear nuevo evento</a>
    <br>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Price(â‚¬)</th>
                    <th>Image</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.text }}</td>
                    <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ event.location ? event.location : 'Virtual / online' }}</td>
                    <td>{{ event.price ? event.price : 'Gratuito' }}</td>
                    <td><img src="/uploads/images/{{ event.image }}" alt="Imagen del evento {{ event.title }}" width="50" height="auto" style="border-radius: 5px;" /></td>
                    <td>
                        <a href="{{ path('app_event_show', {'id': event.id}) }}">Mostrar</a>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}">Editar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No hay registros de eventos</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
