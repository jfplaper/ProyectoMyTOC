<form class="delete_form" method="post" action="{{ path('app_clinic_delete', {'id': clinic.id}) }}" 
    onsubmit="return confirm('¿Estás seguro/a de que deseas eliminar esta clínica?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clinic.id) }}">
    <button class="btn bg-white p-0 m-0 btn_erase"><i class="fa fa-eraser"></i></button>
</form>
